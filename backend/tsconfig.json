{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "esModuleInterop": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "outDir": "build",
    "noImplicitAny": false,
    "lib": ["ES2021.String"],
    "resolveJsonModule": true
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "build"]
}
